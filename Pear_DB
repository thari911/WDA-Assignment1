$end_year = $_GET['end_year'];
$min_winestock = $_GET['Min_wine_in_stock'];
$min_customers = $_GET['Min_customers'];
$min_cost = $_GET['cost_min_range'];
$max_cost = $_GET['cost_max_range'];
	

	if($wine_name == NULL)
